{
  "editor.tabSize": 2,
  "editor.tabCompletion": "on",
  "editor.wordWrapColumn": 90,
  "editor.rulers": [
    90
  ],
  "files.exclude": {
    "**/node_modules": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.cache": true,
    "**/dist": true,
    "**/_release": true,
    "**/.turbo": true,
    "**/build": true,
    "**/.yarn": true,
    "**/.pnp.*": true
  },
  // --- TS Editor Configs ---
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "shortest",
  "typescript.preferences.quoteStyle": "single",
  "typescript.tsdk": "node_modules/typescript/lib",
  // --- Code Formatting Setting ---
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "emmet.excludeLanguages": [
    "markdown",
    "typescriptreact"
  ],
  // disable default vscode formatters and use eslint instead
  "javascript.format.enable": false,
  "typescript.format.enable": false,
  "editor.formatOnPaste": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    // remains like this until all https://github.com/stylelint/stylelint/issues/4574 errors are fixed
    "source.fixAll.stylelint": false
  },
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false
  },
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "[graphql]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.snippetSuggestions": "bottom"
  },
  // --- File Language & Icon Assoiations ---
  "files.associations": {
    ".dockerignore": "ignore",
    "tsconfig.*.json": "jsonc"
  },
  "vsicons.associations.files": [
    {
      "icon": "docker2",
      "filename": true,
      "extensionsGlob": [
        "yml"
      ],
      "filenamesGlob": [
        "docker-compose",
        "docker-compose.local",
        "docker-compose.base",
        "docker-compose.nightly",
        "docker-compose.qa",
        "docker-compose.insiders",
        "docker-compose.production"
      ]
    },
    {
      "icon": "tsconfig",
      "filename": true,
      "extensionsGlob": [
        "json"
      ],
      "filenamesGlob": [
        "tsconfig.base",
        "tsconfig.front"
      ]
    },
    {
      "icon": "jest",
      "filename": true,
      "extensionsGlob": [
        "js"
      ],
      "filenamesGlob": [
        "jest-e2e.config",
        "jest.config.integration"
      ]
    },
    {
      "icon": "test",
      "extensions": [
        "e2e-test.ts"
      ]
    },
    {
      "icon": "style",
      "extensions": [
        "jss.ts"
      ]
    }
  ],
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "cSpell.words": [
    "avidkit",
    "sortablejs"
  ],
  "eslint.packageManager": "yarn"
}
